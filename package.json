{
  "name": "lantern",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "next start",
    "dev": "next dev",
    "lint": "next lint",
    "check-types": "tsc --noEmit",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ff": "pnpm run test:e2e --project=firefox",
    "migrate": "tsx --env-file=.env.development src/migrations/migrationScript.ts --latest",
    "migrate:up": "tsx --env-file=.env.development src/migrations/migrationScript.ts --up",
    "migrate:down": "tsx --env-file=.env.development src/migrations/migrationScript.ts --down"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@apollo/server": "^4.9.5",
    "@lucia-auth/adapter-postgresql": "^2.0.2",
    "@serwist/next": "^8.4.0",
    "@serwist/precaching": "^8.4.0",
    "@serwist/sw": "^8.4.0",
    "kysely": "^0.26.3",
    "lucia": "^2.7.6",
    "mobx": "^6.12.0",
    "mobx-react-lite": "^4.0.5",
    "next": "^14.0.4",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.11",
    "@types/node": "20.10.5",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.40.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
