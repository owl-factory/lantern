{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "api": [
        "src/api"
      ],
      "api/*": [
        "src/api/*"
      ],
      "controllers": [
        "src/controllers"
      ],
      "controllers/*": [
        "src/controllers/*"
      ],
      "components": [
        "src/components"
      ],
      "components/*": [
        "src/components/*"
      ],
      "nodes": [
        "src/nodes"
      ],
      "nodes/*": [
        "src/nodes/*"
      ],
      "server": [
        "src/server"
      ],
      "server/*": [
        "src/server/*"
      ],
      "tests": [
        "src/tests"
      ],
      "tests/*": [
        "src/tests/*"
      ],
      "types": [
        "src/types"
      ],
      "types/*": [
        "src/types/*"
      ],
      "utilities": [
        "src/utilities"
      ],
      "utilities/*": [
        "src/utilities/*"
      ],
      "security": [
        "src/security"
      ],
      "security/*": [
        "src/security/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    ".next",
    "out_functions",
    "out_publish",
    "**/__mock__/*"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js"
  ]
}
