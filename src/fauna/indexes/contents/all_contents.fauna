// Creates an index for listing all contents. This is a temporary module index and should be tightened eventually
CreateIndex({
  name: "all_contents",
  source: Collection("contents"),
  values: [
    { field: ["data", "updatedAt"]},
    { field: ["ref"]},
    { field: ["data", "name"]},
    { field: ["data", "contentType", "ref"]},
    { field: ["data", "contentType", "name"]},
    { field: ["data", "ruleset", "ref"]},
    { field: ["data", "ruleset", "name"]}
  ],
})