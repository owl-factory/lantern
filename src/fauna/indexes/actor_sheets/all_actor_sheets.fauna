// Creates an index for listing all actor sheets. This is a temporary actor sheet index and should be tightened eventually
CreateIndex({
  name: "all_actor_sheets",
  source: Collection("actor_sheets"),
  values: [
    { field: ["data", "updatedAt"]},
    { field: ["ref"]},
    { field: ["data", "name"]},
    { field: ["data", "ruleset", "ref"]},
    { field: ["data", "xml"]},
  ],
})