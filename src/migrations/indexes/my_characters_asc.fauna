// An index for searching through the current user's characters. The characters are sorted from last updated first
CreateIndex({
  name: "my_characters_asc",
  source: Collection("characters"),
  terms: [{ field: ["data", "ownedBy", "ref"]} ],
  values: [{ field: ["data", "updatedAt"], reverse: true}, { field: ["ref"] }, { field: ["data", "name"]}, { field: ["data", "ruleset", "ref"]}, { field: [ "data", "campaign", "ref" ]}, { field: ["data", "profile", "src"]}],
})