{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "declaration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@owl-factory/*": [
        "src/@owl-factory/*"
      ],
      "controllers": [
        "src/controllers"
      ],
      "controllers/*": [
        "src/controllers/*"
      ],
      "components": [
        "src/components"
      ],
      "components/*": [
        "src/components/*"
      ],
      "server": [
        "src/server"
      ],
      "server/*": [
        "src/server/*"
      ],
      "tests": [
        "src/tests"
      ],
      "tests/*": [
        "src/tests/*"
      ],
      "types": [
        "src/types"
      ],
      "types/*": [
        "src/types/*"
      ],
      "utilities": [
        "src/utilities"
      ],
      "utilities/*": [
        "src/utilities/*"
      ],
      "security/*": [
        "src/security/*"
      ]
    },
    "incremental": true
  },
  "exclude": [
    "node_modules",
    ".next",
    "out_functions",
    "out_publish"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js"
  ]
}
