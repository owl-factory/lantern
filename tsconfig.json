{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "client": ["src/client"],
      "client/*": ["src/client/*"],
      "components": ["src/components"],
      "components/*": ["src/components/*"],
      "server": ["src/server"],
      "server/*": ["src/server/*"],
      "types": ["src/types"],
      "types/*": ["src/types/*"],
      "utilities": ["src/utilities"],
      "utilities/*": ["src/utilities/*"],
    }
  },
  "exclude": [
    "node_modules",
    ".next",
    "out_functions",
    "out_publish"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js"
  ]
}
